meta {
  name: Create Workspace Missing Name
  type: http
  seq: 3
}

post {
  url: {{baseUrl}}/api/workspaces
  body: json
  auth: bearer
}

auth:bearer {
  token: {{authToken}}
}

body:json {
  {
    "description": "Workspace without name"
  }
}

assert {
  res.status: eq 400
  res.body.error: isDefined
}

tests {
  test("should return 400 when name is missing", function() {
    expect(res.getStatus()).to.equal(400);
    expect(res.getBody().error).to.be.a("string");
  });
}
