meta {
  name: Validate Access Success
  type: http
  seq: 17
}

get {
  url: {{baseUrl}}/api/workspaces/{{workspaceId}}/validate-access
  body: none
  auth: bearer
}

auth:bearer {
  token: {{authToken}}
}

assert {
  res.status: eq 200
  res.body.has_access: isDefined
}

tests {
  test("should validate access to workspace", function() {
    expect(res.getStatus()).to.equal(200);
    expect(res.getBody().has_access).to.be.a("boolean");
    expect(res.getBody().workspace_id).to.be.a("string");
  });
}
