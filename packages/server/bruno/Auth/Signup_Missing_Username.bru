meta {
  name: Signup Missing Username
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/api/auth/signup
  body: json
  auth: none
}

body:json {
  {
    "email": "test@example.com",
    "password": "password123"
  }
}

assert {
  res.status: eq 400
