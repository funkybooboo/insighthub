meta {
  name: Send Message Success
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/api/chat
  body: json
  auth: bearer
}

auth:bearer {
  token: {{authToken}}
}

body:json {
  {
    "prompt": "What is machine learning?",
    "session_id": "test-session-123"
  }
}

assert {
  res.status: eq 200
  res.body.response: isDefined
}

tests {
  test("should return chat response", function() {
    expect(res.getStatus()).to.equal(200);
    expect(res.getBody().response).to.be.a("string");
  });
}
