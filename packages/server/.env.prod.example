# Flask API Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=postgresql://insighthub:insighthub_dev@localhost:5432/insighthub

# Repository Implementation Configuration
USER_REPOSITORY_TYPE=sql
DOCUMENT_REPOSITORY_TYPE=sql
CHAT_SESSION_REPOSITORY_TYPE=sql
CHAT_MESSAGE_REPOSITORY_TYPE=sql

# Blob Storage Implementation Configuration
# Options: s3, file_system, in_memory
BLOB_STORAGE_TYPE=s3

# File System Storage Configuration
FILE_SYSTEM_STORAGE_PATH=uploads

# Blob Storage Configuration (MinIO/S3)
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=insighthub
S3_SECRET_KEY=insighthub_dev_secret
S3_BUCKET_NAME=documents

# Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# RAG Configuration (for future use)
RAG_TYPE=vector
CHUNKING_STRATEGY=sentence
CHUNK_SIZE=512
CHUNK_OVERLAP=50
RAG_TOP_K=5

# LLM Provider Selection
# Options: ollama, openai, claude, huggingface
LLM_PROVIDER=ollama

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_LLM_MODEL=llama3.2:1b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# OpenAI Configuration (optional)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

# Anthropic Claude Configuration (optional)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Hugging Face Configuration (optional)
HUGGINGFACE_API_KEY=
HUGGINGFACE_MODEL=meta-llama/Llama-3.2-3B-Instruct

# Qdrant Configuration (for future RAG use)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=insighthub

RABBITMQ_URL=amqp://insighthub:insighthub_dev@localhost:5672/

# JWT Authentication Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_EXPIRE_MINUTES=1440

# Security Configuration
CORS_ORIGINS=https://yourdomain.com

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_HOUR=500

# Performance Monitoring
SLOW_REQUEST_THRESHOLD=2.0
ENABLE_PERFORMANCE_STATS=true

# Logging Configuration
LOG_LEVEL=WARNING
