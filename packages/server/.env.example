# ===========================================
# InsightHub Server Configuration for Docker
# ===========================================
# This .env file is configured for Docker Compose usage
# DO NOT commit this file to version control

# Environment
ENVIRONMENT=development

# Flask API Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Database Configuration
DATABASE_TYPE=postgres
DATABASE_URL=postgresql://insighthub:insighthub_dev@postgres:5432/insighthub

# Repository Implementation
REPOSITORY_TYPE=sql

# Cache Configuration
CACHE_TYPE=redis
REDIS_URL=redis://redis:6379/0
REDIS_DEFAULT_TTL=3600

# Storage Configuration
STORAGE_TYPE=s3

# Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# LLM Provider Selection
LLM_PROVIDER=ollama

# Ollama Configuration
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_LLM_MODEL=llama3.2:1b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# Security Configuration
SECRET_KEY=development-secret-key-change-in-production-minimum-32-chars-required
JWT_SECRET_KEY=development-jwt-secret-key-change-in-production-minimum-32-chars-required
JWT_EXPIRE_MINUTES=1440
CORS_ORIGINS_STR=http://localhost:3000,http://localhost:5173

# Worker Configuration
WORKER_NAME=
WORKER_CONCURRENCY=2

# Processing Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
BATCH_SIZE=32

# Storage Configuration
BLOB_STORAGE_TYPE=s3
FILE_SYSTEM_STORAGE_PATH=uploads
S3_ENDPOINT_URL=http://minio:9000
S3_ACCESS_KEY=insighthub
S3_SECRET_KEY=insighthub_dev_secret
S3_BUCKET_NAME=documents

# Vector Store Configuration
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=documents

# Message Queue Configuration
RABBITMQ_URL=amqp://insighthub:insighthub_dev@rabbitmq:5672/

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=auto
SLOW_REQUEST_THRESHOLD=1.0
ENABLE_PERFORMANCE_STATS=true