# ===========================================
# InsightHub Server Configuration Template
# ===========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit your actual .env file to version control

# Environment
ENVIRONMENT=development

# Flask API Configuration
HOST=0.0.0.0
PORT=5000
DEBUG=true

# Database Configuration
DATABASE_TYPE=sqlite  # 'sqlite' or 'postgres'
DATABASE_URL=sqlite:///insighthub.db  # For SQLite
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name  # For PostgreSQL

# Repository Implementation
REPOSITORY_TYPE=in_memory  # 'in_memory' or 'sql'

# Cache Configuration
CACHE_TYPE=in_memory  # 'in_memory' or 'redis'
REDIS_URL=redis://localhost:6379/0
REDIS_DEFAULT_TTL=3600

# Storage Configuration
STORAGE_TYPE=filesystem  # 'filesystem' or 's3'

# Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# LLM Provider Selection
# Options: ollama, openai, anthropic, huggingface
LLM_PROVIDER=ollama

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_LLM_MODEL=llama3.2:1b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# OpenAI Configuration (optional)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Anthropic Claude Configuration (optional)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Hugging Face Configuration (optional)
HUGGINGFACE_API_KEY=your-huggingface-api-key-here
HUGGINGFACE_MODEL=meta-llama/Llama-3.2-3B-Instruct

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production-minimum-32-chars-required
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-minimum-32-chars-required
JWT_EXPIRE_MINUTES=1440
CORS_ORIGINS_STR=http://localhost:5173,http://localhost:3000

# Worker Configuration
WORKER_NAME=
WORKER_CONCURRENCY=2

# Processing Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
BATCH_SIZE=32

# Storage Configuration
BLOB_STORAGE_TYPE=s3
FILE_SYSTEM_STORAGE_PATH=uploads
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_BUCKET_NAME=documents

# Vector Store Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=insighthub

# Graph Store Configuration (optional)
NEO4J_URL=neo4j://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# Legacy Configuration (for backward compatibility)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
LOG_LEVEL=INFO
LOG_FORMAT=auto
SLOW_REQUEST_THRESHOLD=1.0
ENABLE_PERFORMANCE_STATS=true