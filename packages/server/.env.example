# ========================================
# RAG System Configuration
# ========================================

# -----------------------------------------
# Ollama Configuration (Local LLM)
# -----------------------------------------
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_LLM_MODEL=llama3.2
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# -----------------------------------------
# Qdrant Configuration (Local Vector DB)
# -----------------------------------------
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=rag_collection

# -----------------------------------------
# OpenAI Configuration (Optional)
# -----------------------------------------
# Uncomment and set if using OpenAI embeddings or LLM
# OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_EMBEDDING_MODEL=text-embedding-3-small
# OPENAI_LLM_MODEL=gpt-3.5-turbo

# -----------------------------------------
# Pinecone Configuration (Optional)
# -----------------------------------------
# Uncomment and set if using Pinecone instead of Qdrant
# PINECONE_API_KEY=your-pinecone-api-key-here
# PINECONE_INDEX_NAME=rag-index
# PINECONE_CLOUD=aws
# PINECONE_REGION=us-east-1
# PINECONE_METRIC=cosine

# -----------------------------------------
# Document Chunking Configuration
# -----------------------------------------
CHUNK_SIZE=500
CHUNK_OVERLAP=50
CHUNK_STRATEGY=sentence  # Options: character, sentence, word

# -----------------------------------------
# RAG System Configuration
# -----------------------------------------
RAG_TOP_K=5
EMBEDDING_DIMENSION=768

# -----------------------------------------
# Application Settings
# -----------------------------------------
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1
