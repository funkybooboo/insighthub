# ===========================================
# InsightHub Server Configuration (Pydantic)
# ===========================================
# This file uses the new Pydantic-based configuration system.
# Environment variables map directly to config field names.

# Environment
ENVIRONMENT=development

# Flask API Configuration
host=0.0.0.0
port=5000
debug=true

# Database Configuration
database_url=postgresql://insighthub:insighthub_dev@localhost:5432/insighthub

# Redis Configuration (for caching)
redis_url=redis://localhost:6379/0
redis_default_ttl=3600

# Upload Configuration
upload_folder=uploads
max_content_length=16777216

# LLM Provider Selection
# Options: ollama, openai, anthropic, huggingface
llm_provider=ollama

# Ollama Configuration
ollama_base_url=http://localhost:11434
ollama_llm_model=llama3.2:1b
ollama_embedding_model=nomic-embed-text

# OpenAI Configuration (optional)
openai_api_key=
openai_model=gpt-3.5-turbo

# Anthropic Claude Configuration (optional)
anthropic_api_key=
anthropic_model=claude-3-5-sonnet-20241022

# Hugging Face Configuration (optional)
huggingface_api_key=
huggingface_model=meta-llama/Llama-3.2-3B-Instruct

# Security Configuration
secret_key=your-secret-key-change-in-production-minimum-32-chars
jwt_secret_key=your-jwt-secret-key-change-in-production-minimum-32-chars
jwt_expire_minutes=1440
cors_origins_str=http://localhost:5173,http://localhost:3000

# Legacy Configuration (for backward compatibility)
# These will be removed once all code is migrated to use config.*
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=True
DATABASE_URL=postgresql://insighthub:insighthub_dev@localhost:5432/insighthub
REDIS_URL=redis://localhost:6379/0
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-minimum-32-chars
JWT_EXPIRE_MINUTES=1440
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
LOG_LEVEL=INFO
LOG_FORMAT=auto
SLOW_REQUEST_THRESHOLD=1.0
ENABLE_PERFORMANCE_STATS=true
