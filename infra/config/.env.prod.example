# ===========================================
# InsightHub Server Configuration (Production)
# ===========================================
# This file uses the new Pydantic-based configuration system.
# Environment variables map directly to config field names.

# Environment
ENVIRONMENT=production

# Flask API Configuration
host=0.0.0.0
port=5000
debug=false

# Database Configuration
database_url=postgresql://user:password@host:port/database

# Redis Configuration (REQUIRED in production)
redis_url=redis://your-redis-host:6379/0
redis_default_ttl=3600

# Upload Configuration
upload_folder=uploads
max_content_length=16777216

# LLM Provider Selection
# Options: ollama, openai, anthropic, huggingface
llm_provider=ollama

# Ollama Configuration
ollama_base_url=http://localhost:11434
ollama_llm_model=llama3.2
ollama_embedding_model=nomic-embed-text

# OpenAI Configuration (optional)
openai_api_key=your-openai-api-key
openai_model=gpt-4

# Anthropic Claude Configuration (optional)
anthropic_api_key=your-anthropic-api-key
anthropic_model=claude-3-5-sonnet-20241022

# Hugging Face Configuration (optional)
huggingface_api_key=your-huggingface-api-key
huggingface_model=meta-llama/Llama-3.2-3B-Instruct

# Security Configuration
secret_key=your-production-secret-key-minimum-32-chars-replace-this
jwt_secret_key=your-production-jwt-secret-key-minimum-32-chars-replace-this
jwt_expire_minutes=1440
cors_origins_str=https://yourdomain.com,https://www.yourdomain.com

# Legacy Configuration (for backward compatibility)
# These will be removed once all code is migrated to use config.*
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=False
DATABASE_URL=postgresql://user:password@host:port/database
REDIS_URL=redis://your-redis-host:6379/0
JWT_SECRET_KEY=your-production-jwt-secret-key-minimum-32-chars-replace-this
JWT_EXPIRE_MINUTES=1440
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_HOUR=500
LOG_LEVEL=WARNING
LOG_FORMAT=auto
SLOW_REQUEST_THRESHOLD=2.0
ENABLE_PERFORMANCE_STATS=true
